@page
@model RestoStockDB1.Pages.DetallesPlatos.EditModel

@{
    ViewData["Title"] = "Editar Detalle del Plato";
}

<h1>Editar Detalle del Plato</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DetallePlato.DetallePlatoId" />

            <div class="form-group">
                <label asp-for="DetallePlato.PlatoId" class="control-label"></label>
                <select asp-for="DetallePlato.PlatoId" class="form-control" asp-items="Model.Platos"></select>
                <span asp-validation-for="DetallePlato.PlatoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DetallePlato.IngredienteId" class="control-label"></label>
                <select asp-for="DetallePlato.IngredienteId" class="form-control" asp-items="Model.Ingredientes"></select>
                <span asp-validation-for="DetallePlato.IngredienteId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DetallePlato.Cantidad" class="control-label"></label>
                <input asp-for="DetallePlato.Cantidad" type="number" class="form-control" />
                <span asp-validation-for="DetallePlato.Cantidad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_LoginStatusPartial" />
}