@page
@model RestoStockDB.Pages.Platos.IndexModel

@{
    ViewData["Title"] = "Index Platos";
}

<h1>PLATO</h1>

<p>
    <a asp-page="Create" class="btn btn-success">CREAR NUEVO</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Platos[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platos[0].PrecioVenta)  
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platos[0].Descripcion)  
            </th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Platos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecioVenta)  

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)  

                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.PlatoId" class="btn btn-danger">Editar</a>
                    <a asp-page="./Delete" asp-route-id="@item.PlatoId" class="btn btn-danger">Eliminar</a>
                </td>
                <td>
                    <span></span>
                </td>
            </tr>
        }
    </tbody>
</table>
