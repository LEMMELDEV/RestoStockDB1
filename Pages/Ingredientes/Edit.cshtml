@page
@model RestoStockDB1.Pages.Ingredientes.EditModel
@{
    ViewData["Title"] = "Editar Ingrediente";
}

<h1>Editar Ingrediente</h1>

<h4>Ingrediente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ingrediente.IngredienteId" />

            <div class="form-group">
                <label asp-for="Ingrediente.Nombre" class="control-label"></label>
                <input asp-for="Ingrediente.Nombre" class="form-control" />
                <span asp-validation-for="Ingrediente.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ingrediente.CantidadDisponible" class="control-label"></label>
                <input asp-for="Ingrediente.CantidadDisponible" type="number" class="form-control" />
                <span asp-validation-for="Ingrediente.CantidadDisponible" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ingrediente.UnidadMedida" class="control-label"></label>
                <input asp-for="Ingrediente.UnidadMedida" class="form-control" />
                <span asp-validation-for="Ingrediente.UnidadMedida" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ingrediente.PrecioUnitario" class="control-label"></label>
                <input asp-for="Ingrediente.PrecioUnitario" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Ingrediente.PrecioUnitario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
