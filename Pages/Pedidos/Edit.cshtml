@page
@model RestoStockDB1.Pages.Pedidos.EditModel
@{
    ViewData["Title"] = "Editar Pedido";
}

<h1>Editar</h1>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pedido.PedidoId" />

            <div class="form-group">
                <label asp-for="Pedido.ProovedorId" class="control-label"></label>
                <select asp-for="Pedido.ProovedorId" class="form-control" asp-items="@(new SelectList(ViewData["Proveedores"] as IEnumerable<RestoStockDB1.Models.Proovedor>, "ProovedorId", "Nombre"))">
                    <option value="">Seleccione un Proveedor</option>
                </select>
                <span asp-validation-for="Pedido.ProovedorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Pedido.FechaPedido" class="control-label"></label>
                <input asp-for="Pedido.FechaPedido" class="form-control" type="date" />
                <span asp-validation-for="Pedido.FechaPedido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Pedido.Total" class="control-label"></label>
                <input asp-for="Pedido.Total" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Pedido.Total" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}